datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
    USER
    DESIGNER
    MANUFACTURER
    DESIGNER_MANUFACTURER
    PARTNER
}

model Consent {
    id Int @id @default(autoincrement())
    timestamp DateTime @default(now())
    consentType String
    user User @relation(fields: [userId], references: [id])
    userId String
}

model User {
  id            String      @id
  email         String      @unique
  firstName     String?
  lastName      String?
  profileImage  String?
  bio           String?
  role          Role        @default(USER)
  consents      Consent[]   @relation()
}


