// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
    USER
    DESIGNER
    MANUFACTURER
    DESIGNER_MANUFACTURER
    PARTNER
}

model User {
  id            String      @id
  email         String      @unique
  firstName     String?
  lastName      String?
  profileImage  String?
  bio           String?
  role          Role        @default(USER)
}
